<style lang="scss">
  @media (max-width: 1023px) {
    main {
      position: relative;
      padding-top: 12vh;
      &::before {
        content: "";
        position: absolute;
        top: -400px;
        left: 0;
        width: 100%;
        height: calc(100% + 400px);
        transition: all 2s ease-in-out;
        z-index: 49;
      }
      &.dark::before {
        background-color: rgba(0, 0, 0, 0.8);
      }
    }
  }
</style>
